<header>
  <div class="jumbotron">
<h1 class="display-4">My movies list</h1>
<p class="lead">Simple way to manage your movies</p>
    </div>
</header>


<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lists.each do |list| %>
      <tr>
        <td><%= list.name %></td>
        <%= cl_image_tag list.photo.key %>
        <td><%= link_to 'Show', list %></td>
        <td><%= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New List', new_list_path %>
