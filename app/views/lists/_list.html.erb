<div id="card" class="relative my-2 px-2 w-1/4 overflow-hidden sm:my-3 sm:px-3 sm:w-full md:my-3 md:px-3 md:w-1/2 lg:my-2 lg:px-2 lg:w-1/4 xl:my-2 xl:px-2 xl:w-1/6 transition duration-500 ease-in-out border-white rounded border-solid hover:border-transparent border-2 text-center">
<a href="<%= list_path(list) %>" class=" w-full h-full">
  <div class="">
    <div>
      <p class="pt-2 absolute inset-x-0 top-0 text-3xl pb-4 font-bold text-white uppercase bg-black bg-opacity-80">
        <%= list.name %>
      </p>
      <div>
        <% if list.photo.attached? %>
          <%= cl_image_tag list.photo.key %>
        <% else %>
          <%= image_tag "placeholder.jpg", alt: "placeholder" %>
        <% end %>
      </div>
    </div>
  </div>
</a>

<div class="text-3xl pb-4 absolute font-bold text-white uppercase bg-black bg-opacity-80 bg-black bg-opacity-80 pt-2 pb-2 absolute inset-x-0 bottom-0">
        <%= link_to list_path(list), method: :delete, data: { confirm: 'Are you sure?' } do %>
          <i class="fas fa-trash-alt hover:text-red-600 transition duration-500 ease-in-out"></i>
        <% end %>
      </div>
</div>
